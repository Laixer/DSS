<Window x:Class="DSS_WPF.TestInformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSS_WPF"
        mc:Ignorable="d"
        Title="Testinformatie"
        Width="Auto"
        SizeToContent="Width">
    <Grid Width="Auto" Margin="0,0,10,0">
        <StackPanel x:Name="InformationStackPanel" Orientation="Horizontal" HorizontalAlignment="Left" Width="Auto">
            <local:GenericTestInformationComponent x:Name="GenericInformationComponent" Width="Auto"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10">
            <Button Content="Vul met voorbeelddata" VerticalAlignment="Bottom" Click="Example_Data_Click" HorizontalAlignment="Right" Width="125"/>
            <Button Content="Verder" HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Bottom"  Click="Continue_Button_Click"/>
        </StackPanel>
        
    </Grid>


</Window>
